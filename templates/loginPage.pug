extend layout.pug 

append pageContent 
    // we will update this later so that we can add a favicon

    .contentContainer
        .formContainer   
            form(action="/login", method="post")
                .formElement
                    input#username(type="text", placeholder="username" required name="username")
                
                .formElement 
                    input(type="password" placeholder="password" required name="password")
                    
                .formElement
                    input(type="submit")
        
        .loginRegisterContainer
            .buttonTextWrapper
                h3 Click Below To Register
                a(href="/register") Register Here 